@model University.Web.Models.StudentViewModels.StudentDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>StudentDetailsViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Avatar)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model?.Avatar" alt="profile image" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameFirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameFirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameLastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameLastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdressStreet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdressStreet)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdressZipCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdressZipCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdressCity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdressCity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Attending)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attending)
        </dd> 
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Courses)
        </dt>
        <dd class = "col-sm-10">

            @foreach(var course in Model.Courses)
            {
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">@course.Title</a>
                <br />
            }

        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id  }) |
    <a asp-action="Index">Back to List</a>
</div>
